<h1>Listing product_designs</h1>

<table>
  <tr>
    <th>Creating user</th>
    <th>Name</th>
    <th>Base value</th>
  </tr>

<% for product_design in @product_designs %>
  <tr>
    <td><%=h product_design.creating_user_id %></td>
    <td><%=h product_design.name %></td>
    <td><%=h product_design.base_value %></td>
    <td><%= link_to 'Show', product_design %></td>
    <td><%= link_to 'Edit', edit_product_design_path(product_design) %></td>
    <td><%= link_to 'Destroy', product_design, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

